<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>bundle</id>
	<formats>
		<format>tar.gz</format>
		<format>tar.bz2</format>
		<format>zip</format>
	</formats>
    <!-- The base directory will be the name of the artifact based on the maven versioning. -->
	<includeBaseDirectory>true</includeBaseDirectory>
        <files>
             <file>
		<source>${project.build.directory}/classes/RWStore.properties</source>
	        <outputDirectory>conf</outputDirectory>
 	        <fileMode>640</fileMode>
             </file>
             <file>
		<source>target/classes/war/WEB-INF/classes/log4j.properties</source>
	        <outputDirectory>conf</outputDirectory>
 	        <fileMode>640</fileMode>
             </file>
             <file>
                <source>target/classes/jetty.xml</source>
	        <outputDirectory>conf</outputDirectory>
 	        <fileMode>640</fileMode>
             </file>
	 </files>
	<fileSets>
	     <fileSet>
		<outputDirectory>lib</outputDirectory>
		<includes>
                   <include>*.jar</include>
                </includes>
 	        <fileMode>640</fileMode>
      		<directoryMode>750</directoryMode>
                <directory>target/dependency</directory>
	     </fileSet>
	     <fileSet>
		<outputDirectory>war</outputDirectory>
		<includes>
                  <include>**/*</include>
                </includes>
 	        <fileMode>640</fileMode>
      		<directoryMode>750</directoryMode>
                <directory>target/classes/war</directory>
	     </fileSet>
	     <fileSet>
		<outputDirectory>bin</outputDirectory>
		<includes>
                   <include>**/*</include>
                </includes>
 	        <fileMode>750</fileMode>
      		<directoryMode>750</directoryMode>
                <directory>src/tgz/bin</directory>
	     </fileSet>
	     <fileSet>
		<outputDirectory>conf</outputDirectory>
		<includes>
                   <include>**/*</include>
                </includes>
 	        <fileMode>640</fileMode>
      		<directoryMode>750</directoryMode>
                <directory>src/tgz/conf</directory>
	     </fileSet>
	     <fileSet>
		<outputDirectory>data</outputDirectory>
                <!-- Just create empty directories here -->
		<excludes>
                   <exclude>**/*</exclude>
                </excludes>
 	        <fileMode>640</fileMode>
      		<directoryMode>750</directoryMode>
	     </fileSet>
	     <fileSet>
		<outputDirectory>log</outputDirectory>
                <!-- Just create empty directories here -->
		<excludes>
                   <exclude>**/*</exclude>
                </excludes>
 	        <fileMode>640</fileMode>
      		<directoryMode>750</directoryMode>
	     </fileSet>
	     <fileSet>
		<outputDirectory>pid</outputDirectory>
                <!-- Just create empty directories here -->
		<excludes>
                   <exclude>**/*</exclude>
                </excludes>
 	        <fileMode>640</fileMode>
      		<directoryMode>750</directoryMode>
	     </fileSet>
	</fileSets>
</assembly>
